<h1>Listing places</h1>

<table>
  <tr>
    <th>Place name</th>
    <th>Type</th>
    <th>Location</th>
  </tr>

<% for place in @places %>
  <tr>
    <td><%=h place.place_name %></td>
    <td><%=h PlaceType.find(place.type_id).place_type %></td>
    <td><%=h place.location_id %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

