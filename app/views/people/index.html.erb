<h1>People on Makany</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Age</th>
    <th>Gender</th>
  </tr>

<% for person in @people %>
  <tr>
    <td><%=h person.first_name %></td>
    <td><%=h person.last_name %></td>
    <td><%=h person.age %></td>
    <td><%=h person.gender %></td>
    <td><%= link_to 'Show Limited Profile', person %></td>
    <td><%= link_to 'Add as a friend', friendships_path(:friend_id=>person), :method=>:post %></td>

  </tr>
<% end %>
</table>

<br />

